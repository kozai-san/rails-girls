<p id="notice"><%= notice %></p>

<h1><font color="#484D4D">Comments</font></h1>

<table class="table table-hover">
  <%# <%= image_tag ideas.picture_url(:thumb) if ideas.picture.present? %>
  <thead>
    <title>INU Voice</title>
    <tr>
      <th><font color="#484D4D">User name</font></th>
      <th><font color="#484D4D">Body</font></th>
      <th><font color="#484D4D">Idea</font></th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user_name %></td>
        <td><%= comment.body %></td>
        <td><%= comment.idea_id %></td>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
